<%= form_tag "/merchant/discounts/#{@discount.id}", method: :patch do %>
<%= label_tag :name_of_discount %>
<%= text_field_tag :name, "#{@discount.name}"%>
<br>
<%= label_tag :quantity_needed_to_qualify_for_discount %>
<%= text_field_tag :quantity, "#{@discount.quantity}" %>
<br>
<%= label_tag :percentage_off %>
<%= text_field_tag :percentage, "#{@discount.percentage}" %>
<br>
<%= label_tag :item_id %>
<%= text_field_tag :item_id , "#{@discount.item.id}"%>
<br>
<%= submit_tag 'Submit' %>
<% end %>
