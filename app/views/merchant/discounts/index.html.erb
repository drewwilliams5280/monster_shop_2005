<p><%= link_to "Create Discount", "/merchant/discounts/new" %></p>
<p><%= link_to "Create Bulk Discount", "/merchant/bulk_discounts/new" %></p>

<h1>Current <%= @merchant.name %> Discounts</h1>
<section class = "grid-container">
  <% @discounts.each do |discount| %>
    <section class = "grid-item">
      <h3>Item discounted: <%= discount.item.name %></h3>
      <h4>Quantity needed: <%= discount.quantity %></h4>
      <h4>Percentage discounted: <%= discount.percentage %></h4>
      <h4>Name of discount: <%= discount.name %></h4>
      <h4><%= link_to "Edit Discount", "/merchant/discounts/#{discount.id}/edit"%></h4>
      <h4><%= link_to "Delete Discount", "/merchant/discounts/#{discount.id}", method: :delete %></h4>
    </section>
  <% end %>
</section>
