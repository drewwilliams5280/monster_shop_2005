<%= form_tag "/merchant/discounts", method: :post do %>
  <%= label_tag :name_of_discount %>
  <%= text_field_tag :name%>
  <br>
  <%= label_tag :quantity_needed_to_qualify_for_discount %>
  <%= text_field_tag :quantity %>
<br>
<%= label_tag :percentage_off %>
  <%= text_field_tag :percentage %>
<br>
<%= label_tag :item_id %>
  <%= text_field_tag :item_id %>
<br>
  <%= submit_tag 'Submit' %>
<% end %>
<p>Item ID numbers can be found on your Items page.</p>
